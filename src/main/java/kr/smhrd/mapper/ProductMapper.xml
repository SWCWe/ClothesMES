<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.smhrd.mapper.ProductMapper">
    
    <!--  SQL문을 정의   
    	기존 JDBC : SQL문 + java -> 유지보수 힘듦
    			     개발기간 길어짐
    	MyBatis, JPA : 프레임워크 // 복잡한 jdbc를 대안한 프레임워크
    			SQL문과 java를 분리 -> 유지보수 up
    			코드양 줄임 -> 개발기간 단축
    -->
    
    <!-- 
    	resultType => select 결과를 어떤 객체에 담아줄 것인가?
    	조건 1. 필드의 변수명 == 컬럼명
    	조건 2. 기본생성자를 가진 VO여야 한다.
    	id를 통해 mapper.java랑 연결
    	id = 메서드의 이름
     -->
     
     <select id = "product_list" resultType = "kr.smhrd.entity.ProductDAO">
         select * from t_product order by prod_code
         
     </select>
     
     <insert id = "prod_insert" parameterType = "kr.smhrd.entity.ProductDAO">
         insert into t_product (prod_code, prod_name, prod_cnt, prod_m_date)
     </insert>
</mapper>
